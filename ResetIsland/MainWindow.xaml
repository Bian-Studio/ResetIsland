<Window x:Class="ResetIsland.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResetIsland"
        mc:Ignorable="d" WindowStyle="None" ResizeMode="CanResizeWithGrip"
        Title="MainWindow" Height="280" Width="500" MouseLeftButtonDown="Window_MouseLeftButtonDown"
        MinHeight="280" MinWidth="500" Background="Transparent">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0 1 0 0" CornerRadius="10"/>
    </WindowChrome.WindowChrome>
    <Border Background="Transparent"
            BorderThickness="1" BorderBrush="Gray">
        <Grid Margin="15">
            <Frame Source="Pages/Page1.xaml"/>
        </Grid>
    </Border>
</Window>
