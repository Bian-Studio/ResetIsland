<Window x:Class="ResetIsland.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResetIsland"
        mc:Ignorable="d" WindowStyle="None" ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True" Background="Transparent"
        Title="MainWindow" Height="280" Width="500" MouseLeftButtonDown="Window_MouseLeftButtonDown"
        MinHeight="280" MinWidth="500">
    <Border Margin="5" Background="White" Opacity="0.5" CornerRadius="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="5" ShadowDepth="0" Opacity="0.5"
                              Direction="0" Color="Gray"/>
        </Border.Effect>
        <Grid Margin="10">
            <Frame Source="Pages/Page1.xaml"/>
        </Grid>
    </Border>
</Window>
